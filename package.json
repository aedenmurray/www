{
    "name": "www",
    "type": "module",
    "version": "0.0.1",
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-scripts": "5.0.1"
    },
    "devDependencies": {
        "esbuild": "^0.19.4",
        "fs-extra": "^11.1.1"
    },
    "scripts": {
        "fmt": "terraform fmt -recursive terraform",
        "deploy": "npm run build && terraform -chdir=terraform apply && npm run invalidate",
        "invalidate": "aws cloudfront create-invalidation --distribution-id E2NWH87KQ3CPU8 --paths '/*'",
        "build": "react-scripts build",
        "start": "react-scripts start"
    },
    "eslintConfig": {
        "extends": [
            "react-app"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
