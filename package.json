{
    "name": "web",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "local-echo": "github:wavesoft/local-echo",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-scripts": "5.0.1",
        "xterm": "^5.0.0",
        "xterm-addon-fit": "^0.6.0"
    },
    "scripts": {
        "fmt": "terraform fmt -recursive terraform",
        "deploy": "npm run build && npm run build-webshell && terraform -chdir=terraform apply && npm run invalidate",
        "invalidate": "aws cloudfront create-invalidation --distribution-id E2NWH87KQ3CPU8 --paths '/*'",
        "build-webshell": "node webshell/esbuild.js && zip -j /tmp/webshell.zip /tmp/webshell/bin.js",
        "build": "react-scripts build",
        "start": "react-scripts start"
    },
    "eslintConfig": {
        "extends": [
            "react-app"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "aws-sdk": "^2.1270.0",
        "esbuild": "^0.16.1",
        "prettier": "^2.8.0"
    }
}
